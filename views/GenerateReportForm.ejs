<!DOCTYPE html>
<html>
<head>
	<title>
		Scan QR From gate
	</title>
	<style type="text/css">
		table, th, td
		{
			border: 1px solid black;
		}
	</style>
</head>
<body>
	<h1> <%= title %> </h1>
	<table style="width:100%">
		
	  <tr border="1">
	    <th>StudentId</th>
	    <th>CourseName</th>
	    <th>InDate</th>
	    <th>OutDate</th>
	    <th>InTime</th>
	    <th>OutTime</th>
	  </tr>
		<% if (messages) { %>
			<% if(messages.length > 0) { %>
				<% for(mes of messages) { %>
					<tr>
						<td> <%= mes.userId %> </td>
						<td> <%= mes.gaterecords.courseName %> </td>
						<td> <%= mes.inDate %> </td>
						<td> <%= mes.outDate %> </td>
						<td> <%= mes.inTime %> </td>
						<td> <%= mes.outTime %> </td>
					</tr>
				<% } %>
			<% } %>
		<% } %>
	  <tr>
	    <td>Eve</td>
	    <td>Jackson</td>
	    <td>94</td>
	  </tr>
	</table>
	
	<form method="POST" action="/gate/generateReport">
		from : <input type="date" id="startDate" min="2002-01-01" value="2002-01-01" name="startDate"><br><br>
		to : <input type="date" id="endDate" name="endDate" max="2020-18-3"
		data-date-format="DD-MM-YYYY"><br><br>
		<button type="submit" value="Submit">Generate Report </button>
	</form>

	<script type="text/javascript">
		var today = new Date();
		var dd = today.getDate();
		var mm = today.getMonth()+1; //January is 0!
		var yyyy = today.getFullYear();
		 if(dd<10){
		        dd='0'+dd
		    } 
		    if(mm<10){
		        mm='0'+mm
		    } 

		today = yyyy+'-'+mm+'-'+dd;
		document.getElementById("endDate").setAttribute("max", today);
		document.getElementById("endDate").setAttribute("value", today);
		document.getElementById("startDate").setAttribute("max", today);
		document.getElementById("startDate").setAttribute("value", today);
	</script>

</body>
</html>